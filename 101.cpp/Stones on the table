#define INF 1e18;
 
using namespace std;
 
typedef long long ll;
typedef long double ld;
 
ll gcd(ll a, ll b) {
	if (a == 0 || b == 0)return a + b;
	if (a > b)return gcd(a%b, b);
	return gcd(a, b%a);
}
 
 
int main() {
	ios::sync_with_stdio(0);
	cin.tie(0);
	cout.tie(0);
	//Бустеры, ведь я умный!
