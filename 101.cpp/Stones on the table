#include <bits/stdc++.h>
using namespace std;
int main(int argc, char const *argv[])
{
    int n;
    cin >> n;
 
    char c[20];
    for (int i = 0; i < n; i++)
    {
        cin >> c[i];
    }
    int t = 0;
    for (int i = 0; i < n; i++)
    {
        if (c[i] == c[i + 1])
        {
            t++;
        }
    }
    cout << t;
 
    return 0;
}
void solve()
{
	string str ;
    int cnt= 0;
    int n;
    cin >>n >> str;
    for(int i = 0; i < n; i++ ){
        if(str[i]==str[i+1])
            cnt++;
    }
    cout << cnt << endl;
   
}
 
