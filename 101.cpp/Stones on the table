#include <iostream>
#include <vector>
#include <algorithm>
#include <set>
#include <cmath>
#include <map>
//#include <bits>
using namespace std;
int ans;
int main() {
	ios::sync_with_stdio(false) , cin.tie(0) , cout.tie(0);
	int n;
	string ar;
	cin >> n >> ar;
	for(int i = 0 ; i < n ; i++)
	{
		for( ; i < n && ar [ i ] == ar [ i + 1 ] ; i++)
			ans++;
	}
	cout << ans;
}
